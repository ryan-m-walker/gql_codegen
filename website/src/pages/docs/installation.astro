---
import DocsLayout from '../../layouts/DocsLayout.astro';
---

<DocsLayout title="Installation">
  <h1 class="text-2xl font-semibold mb-4">Installation</h1>
  <div class="bg-surface-raised rounded-lg p-4 font-mono text-sm">
    <span class="text-code-comment"># npm</span><br />
    <span class="text-code-command">npm install</span> -D @sgc/cli<br /><br />
    <span class="text-code-comment"># pnpm</span><br />
    <span class="text-code-command">pnpm add</span> -D @sgc/cli<br /><br />
    <span class="text-code-comment"># yarn</span><br />
    <span class="text-code-command">yarn add</span> -D @sgc/cli
  </div>
</DocsLayout>
